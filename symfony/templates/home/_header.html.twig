<!-- ======= Header ======= -->
<header id="header">
	<div class="container">
		<h1>
			<a href="index.html">Jamal Web Artisanat</a>
		</h1>
		<!-- Uncomment below if you prefer to use an image logo -->
		<!-- <a href="index.html" class="mr-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a> -->
		<h2>Je suis 
			<span>développeur web</span>
			professionnel et passionné</h2>
		<nav id="navbar" class="navbar">
			<ul>
				{% for nav_item in nav %}
					<li>
						<a class="nav-link {{nav_item.classCss}}" href="{{nav_item.link}}">{{nav_item.name|capitalize}}</a>
					</li>
				{% endfor %}
			</ul>
			<i class="bi bi-list mobile-nav-toggle"></i>
		</nav>
		<!-- .navbar -->
		<div class="social-links">
		{% for item in social %}
			<a href="{{item.link}}" class="{{item.name}}">
				<i class="bi bi-{{item.name}}"></i>
			</a>
		{% endfor %}
		</div>
	</div>
</header>
<!-- End Header -->
